CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: m.h $(OBJ)
	$(CC) $(CFLAGS) $^ -o $(NAME)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

.PHONY: clean
clean:
	$(RM) *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean: oclean clean

.PHONY: re
re: oclean all
